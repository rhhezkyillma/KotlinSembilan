<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".UploadType">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="100dp"
            android:padding="50dp"

    >


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Upload Type"
            android:textSize="30sp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="10dp"

    />

    <Button
            android:id="@+id/fullcosttype"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:text="Full Cost Type"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:textColor="#fff"/>

    <Button
            android:id="@+id/otherasktype"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="Other Ask Type"
            android:background="@drawable/button"
            android:textColor="#fff"/>

        <Button
                android:id="@+id/peoplewantedtype"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:layout_gravity="center"
                android:text="People Wanted Type"
                android:background="@drawable/button"
                android:textColor="#fff"/>
        <Button
                android:id="@+id/signout"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:text="Sign Out"
                android:background="@drawable/button"
                android:textColor="#fff"/>

    </LinearLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
    >

        <FrameLayout
                android:id="@+id/Bottom_Fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/bottomnavigation"
                android:layout_alignParentTop="true">

        </FrameLayout>

        <android.support.design.widget.BottomNavigationView
                android:id="@+id/bottomnavigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:menu="@menu/menu"
                android:background="#fff"
                android:layout_gravity="bottom"/>


    </RelativeLayout>

</LinearLayout>